<!-- Page Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center main">
      <div>            
      <!--form to test crypto api-->
        <div>
          <h1 class="mt-5">Crypto Finder</h1>
          <h2 name=""></h2>
          <p class="lead">Enter the name of the crypto and press Go!</p>
        </div>
        <form action="/" method="POST">
          <input name="crypto" type="text" id="txtAutoComlete" list="CryptoIdList">
            <datalist id="CryptoIdList">
              {{#each ids}}
                <option value="{{this.id}}"/>
              {{/each}}
            </datalist>
          <button>Go!</button>
        </form>
        <div class="mt-3">
        <!--two pairs of curly braces allows us to access property from post request-->
        <img src="{{logo}}" style="width:75px;">
        {{cryptoInfo}}
        {{error}}
        </div>

        <div class="row row-cols-3 justify-content-center">
          {{#each cryptos}}
            <div class="card bg-light col-3 m-2">
              <img class="card-img-top m-auto pt-3" src="{{this.logo_url}}" alt="{{this.name}} Logo Image" style="width: 75px;">
              <div class ="card-body mx-auto">
                <h5>{{this.name}} : {{this.id}}</h5>
                <p>${{this.price}}</p>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

